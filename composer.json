{
    "name": "sweetchuck/cdd",
    "description": "Circular dependency detector",
    "license": "GPL-3.0-or-later",
    "config": {
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.2"
    },
    "require-dev": {
        "ext-json": "*",
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.3",
        "sweetchuck/git-hooks": "^0.0",
        "sweetchuck/robo-git": "^0.2",
        "sweetchuck/robo-phpcs": "^0.1",
        "sweetchuck/robo-phpmd": "^0.1"
    },
    "autoload": {
        "psr-4": {
            "Sweetchuck\\cdd\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sweetchuck\\cdd\\Tests\\": "src-dev/Tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@deploy-git-hooks"
        ],
        "post-update-cmd": [
            "@deploy-git-hooks"
        ],
        "deploy-git-hooks": "\\Sweetchuck\\GitHooks\\Composer\\Scripts::deploy"
    }
}
